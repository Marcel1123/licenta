<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <message-bundle>
            Messages
        </message-bundle>
        <resource-bundle>
            <base-name>Messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/faces/xhtml/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.loginListener}</from-action>
            <from-outcome>#{msg.login_success}</from-outcome>
            <to-view-id>/faces/xhtml/groups.xhtml</to-view-id>
        </navigation-case>
<!--        <navigation-case>-->
<!--            <from-action>#{login.loginListener}</from-action>-->
<!--            <from-outcome>#{msg.login_failed}</from-outcome>-->
<!--            <to-view-id>/faces/xhtml/index.xhtml</to-view-id>-->
<!--        </navigation-case>-->
    </navigation-rule>


</faces-config>
