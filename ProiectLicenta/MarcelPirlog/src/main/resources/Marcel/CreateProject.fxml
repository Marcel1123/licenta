<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Marcel.controllers.uicontrollers.CreateProjectController">
   <children>
      <AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #231B12;" stylesheets="@style.css">
         <children>
            <TextField fx:id="directoryPath" layoutX="100.0" layoutY="116.0" prefHeight="40.0" prefWidth="600.0" promptText="Enter the search path ..." style="-fx-background-color: #B8D20B; -fx-prompt-text-fill: #000000;" stylesheets="@style.css">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button fx:id="serachButton" layoutX="365.0" layoutY="525.0" mnemonicParsing="false" onAction="#searchForFileInPath" prefHeight="48.0" prefWidth="200.0" style="-fx-background-color: #F56C57; -fx-text-fill: #000000;" stylesheets="@style.css" text="Search" textAlignment="CENTER" AnchorPane.rightAnchor="100.0">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Text fx:id="responseMessage" fill="RED" layoutX="100.0" layoutY="473.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="600.0">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
<!--            <ChoiceBox fx:id="programmingLanguageOption" layoutX="100.0" layoutY="279.0" prefHeight="50.0" prefWidth="600.0" />-->
            <Button fx:id="backToProfileButton" layoutX="37.0" layoutY="525.0" mnemonicParsing="false" onAction="#backToProfile" prefHeight="48.0" prefWidth="200.0" style="-fx-background-color: #F56C57; -fx-text-fill: #000000;" text="Back to profile" textAlignment="CENTER" AnchorPane.leftAnchor="100.0">
               <font>
                  <Font size="20.0" />
               </font></Button>
            <Label fx:id="selectGroupLabel" alignment="CENTER" layoutX="100.0" layoutY="199.0" prefHeight="50.0" prefWidth="220.0" style="-fx-background-color: #231B12; -fx-text-fill: #F77604;" text="SELECT A GROUP">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="groupChoiceBox" layoutX="365.0" layoutY="199.0" onMouseClicked="#createMaterial" prefHeight="50.0" prefWidth="335.0" style="-fx-background-color: #B8D20B; -fx-prompt-text-fill: #000000;" />
            <TextField fx:id="projectName" layoutX="100.0" layoutY="35.0" prefHeight="44.0" prefWidth="600.0" promptText="Enter a project name" style="-fx-background-color: #B8D20B; -fx-prompt-text-fill: #000000;">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <ChoiceBox fx:id="materialName" layoutX="100.0" layoutY="364.0" prefHeight="44.0" prefWidth="600.0" style="-fx-background-color: #B8D20B; -fx-prompt-text-fill: #000000;" visible="false" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
