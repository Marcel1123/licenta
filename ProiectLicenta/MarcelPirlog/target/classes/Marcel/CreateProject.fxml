<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Marcel.controllers.uicontrollers.CreateProjectController">
   <children>
      <AnchorPane fx:id="rootPane" prefHeight="608.0" prefWidth="800.0" style="-fx-background-color: #061283;" stylesheets="@style.css">
         <children>
            <TextField fx:id="directoryPath" layoutX="100.0" layoutY="116.0" prefHeight="40.0" prefWidth="600.0" promptText="Enter the search path ..." style="-fx-background-color: #FFB47C;" stylesheets="@style.css">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button fx:id="serachButton" layoutX="480.0" layoutY="191.0" mnemonicParsing="false" onAction="#searchForFileInPath" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #FD3C3C;" stylesheets="@style.css" text="Search" textAlignment="CENTER" textOverrun="CLIP" underline="true">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
            <Text fx:id="responseMessage" fill="RED" layoutX="100.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="600.0">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <ChoiceBox fx:id="programmingLanguageOption" layoutX="100.0" layoutY="191.0" onMouseClicked="#buildList" prefHeight="50.0" prefWidth="220.0" />
            <Button fx:id="backToProfileButton" layoutX="40.0" layoutY="30.0" mnemonicParsing="false" onAction="#backToProfile" prefHeight="48.0" prefWidth="200.0" text="Back to profile" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
